{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Google mobility data for UK cities.",
  "title":{
    "text": "The Pandemic created the WFH revolution.",
    "subtitle": "The Google mobility index on UK cities.",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {"url": "https://raw.githubusercontent.com/107SBakst/107SBakst.github.io/39da97da97ddcbf6e89c3c21fc0056d69176369a/data/uk_google_mobility.csv"},
  "width": 310,
  "height": 375,
  "background": "rgba(213, 235, 241, 0.582)",
  "transform": [{"filter":{"field": "subreg1","oneOf":["Bristol_City","Greater_London","UK","Greater_Manchester"]}}],
  "layer":[{
"mark": "point",
  "encoding": {
    "x": {"field": "date", "type": "temporal", "title": "Date","axis":{"grid": false}},
    "y": {"field": "workplaces_percent_change_from_baseline", "type": "quantitative", "title": "% change from baseline (0)","axis":{"grid": false}},
    "color":{"field":"sub_region_1"},
    "opacity": {
      "value": 0
    }
  }},
{
    "mark": "line",
    "transform": [
        {"loess": "workplaces_percent_change_from_baseline", "on": "date","bandwidth": 0.1,"groupby": ["sub_region_1"]}
    
],
"encoding": {
    "x": {"field": "date", "type": "temporal","axis":{"grid": false},"timeUnit":"yearmonthdate"},
    "y": {"field": "workplaces_percent_change_from_baseline", "type": "quantitative","axis":{"grid": false}},
    "tooltip": [{"field":"date","type": "temporal"},{"field":"workplaces_percent_change_from_baseline","type": "quantitative","title":"% change from baseline"}],
    "color":{"field":"sub_region_1","legend":{"title":"Geographies","orient":"top-left"}}}

}]}