{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/107SBakst/107SBakst.github.io/main/data/project1df.csv"
    },
    "width": 330,
    "height": 375,
    "description": "gtr",
    "title": {
      "text": "Denser cities are efficient cities.",
      "subtitle": "A polynomial regression of Carbon footprint per capita on population density.",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "layer": [
      {
        "transform": [{"filter": "datum.pop_dens > 1"},
        {"field": "developed", "param": ["MDR", "LDC"]},
        {"calculate": "2*datum.xfit", "as": "b2"}],
        "mark": {"type": "point", "filled": true},
        "encoding": {
          "x": {"field": "pop_dens", "type": "quantitative", "title":"Population density (km2)"},
          "y": {
            "field": "Footprint/Cap_value",
            "type": "quantitative", "title":"Carbon footprint per capita (t CO2)"
          },
          "color": {"field": "developed", "type": "nominal", "title":"Country development","legend": {"orient":"bottom-right"}}
          
        }
      },
      {
        "mark": {"type": "line", "color": "firebrick"},
        "encoding": {
          "x": {"field": "xfit", "type": "quantitative", "axis": {"grid": false}},
          "y": {
            "field": "yfit",
            "type": "quantitative",
            "axis": {"grid": false}
          }
        }
      },
      {
        "transform": [
          {
            "regression": "Footprint/Cap_value",
            "on": "pop_dens",
            "params": true
          },
          {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
        ],
        "mark": {
          "type": "text",
          "color": "firebrick",
          "x": "width",
          "align": "right",
          "y": -5
        },
        "encoding": {"text": {"type": "nominal", "field": "R2"}}
      }
    ]
  }