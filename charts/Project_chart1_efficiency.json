{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/107SBakst/107SBakst.github.io/main/data/project1df.csv"
    },
    "width": 310,
    "height": 375,
    "description": "Chart showing the a key benefit of urban density. The greater a cities population density means the lower the carbon footprint per person of the city.",
    "title": {
      "text": "Denser cities are efficient cities.",
      "subtitle": "A polynomial regression of Carbon footprint per capita on density.",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "background": "rgba(213, 235, 241, 0.582)",
    "layer": [
      {"params": [{
      "name": "industry",
      "select": {"type": "point", "fields": ["developed"]},
      "bind": "legend"
    }],
        "transform": [{"filter": "datum.pop_dens > 1"}],
        "mark": {"type": "point", "filled": true},
        "encoding": {
          "x": {"field": "pop_dens", "type": "quantitative", "title":"Population density (km2)"},
          "y": {
            "field": "Footprint/Cap_value",
            "type": "quantitative", "title":"Carbon footprint per capita (t CO2)"
          },
          "color": {"field": "developed", "type": "nominal", "title":"Country development","legend": {"orient":"bottom-right"}},
          "opacity": {
        "condition": {"param": "industry", "value": 1},
        "value": 0.2},
        "tooltip": {"field": "city_name", "type": "nominal"},
        "size": {"value": 65}
          
        }
      },
      {
        "mark": {"type": "line", "color": "firebrick"},
        "encoding": {
          "x": {"field": "xfit", "type": "quantitative", "axis": {"grid": false}},
          "y": {
            "field": "yfit",
            "type": "quantitative",
            "axis": {"grid": false}
          }
        }
      },
      {
        "transform": [
          {
            "regression": "Footprint/Cap_value",
            "on": "pop_dens",
            "params": true,
            "method": "poly",
            "order": 3
          },
          {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
        ],
        "mark": {
          "type": "text",
          "color": "firebrick",
          "x": "width",
          "align": "right",
          "y": -5
        },
        "encoding": {"text": {"type": "nominal", "field": "R2"}}
      }
    ]
  }