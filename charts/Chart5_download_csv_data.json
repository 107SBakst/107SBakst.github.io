{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Covid-19 new deaths",
    "subtitle": "Sub-title here",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/107SBakst/107SBakst.github.io/main/ltla_2021-10-14_chart5data.csv",
    "format": {"type": "csv"}
  },
  "transform": [

    {"filter": {"field": "areaName", "oneOf": ["Barnet", "Bristol, City of", "Camden"]}}
  ],
  "height": 300,
  "width": 310,
  "mark": {"type": "point", "point": false},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "newDeaths28DaysByDeathDate",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false}
    },
    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "set1"},
      "title": "LEGEND TITLE",
      "legend": {"orient": "top-left", "fillColor": "#FcFdFd"}
    }
  }
}